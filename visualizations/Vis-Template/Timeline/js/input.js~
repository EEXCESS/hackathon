function Input(initMapping, initData){

	this.mapping = getVisChannelKeys();
	
	function getVisChannelKeys(){
		
		var mapping = [];
		
		initMapping.forEach(function(m){
			mapping[m.visualattribute] = m.facet;
		});
		
		return mapping;
	}
	
	this.xAxisChannel = this.mapping['x-Axis'];
	this.yAxisChannel = this.mapping['y-Axis'];
	this.colorChannel = this.mapping['color'];
	
	var processedData = getData(initData);
	this.data = processedData;
	this.keywords = getKeywords(this.data);
	
	
	function getData(jsonData){
	
		var data = [];
		jsonData.forEach(function(d) {
			
			var obj = {
					id : d.id,
					title : d.title,
					uri : d.uri,
					language : d.facets.language || "en", 
					year : d.facets.year,//parseDate(String(d.facets.year)), 
					provider : d.facets.provider, 
					country : d.facets.country || "", 
					keywords : d.facets.keywords || [],
					isHighlighted : false
			};
			data.push(obj);	
		});
		
		return data;
	}
	
	
	
	function getKeywords(data){
		
		var keywords = [];
		
		data.forEach(function(d){
			d.keywords.forEach(function(k){
				
				if(keywords.indexOf(k) == -1)
					keywords.push(k);
			});
		});
		return keywords;
	}
	
	
	
}